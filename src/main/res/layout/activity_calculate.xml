<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp"
    tools:background="#C80F7A4F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0C80F7A4"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="@string/course_fee_calculator"
            android:textColor="#101010"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Six-month courses -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="@string/six_month_courses_r1500_each"
            android:textColor="#263238"
            android:textSize="18sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkFirstAid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_aid" />

        <CheckBox
            android:id="@+id/checkSewing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sewing" />

        <CheckBox
            android:id="@+id/checkLandscaping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/landscaping" />

        <CheckBox
            android:id="@+id/checkLifeSkills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="@string/life_skills" />

        <!-- Six-week courses -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="@string/six_week_courses_r750_each"
            android:textColor="#263238"
            android:textSize="18sp"
            android:textStyle="bold" />


        <CheckBox
            android:id="@+id/checkChildMinding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/child_minding" />

        <CheckBox
            android:id="@+id/checkGardenMaintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/garden_maintenance" />

        <CheckBox
            android:id="@+id/checkCooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="@string/cooking" />

        <!-- Calculate Button -->
        <Button
            android:id="@+id/btnCalculate"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calculate_total" />

        <!-- Result -->
        <TextView
            android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="@string/total_r0"
            android:textColor="#070707"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/back" />

    </LinearLayout>
</ScrollView>
